<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrgMenuPrincipal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Los Misterios del Santo Rosario"
        android:textAlignment="center"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnDoloroso"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Misterio Doloroso" />

            <Button
                android:id="@+id/btnGosozo"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="Misterio Gosozo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnLuminoso"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="Misterio Luminoso"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnGlorioso"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:text="Misterio Glorioso"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>